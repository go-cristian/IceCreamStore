<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.CTA">
    <item name="android:background">@drawable/cta_background</item>
    <item name="android:textColor">@color/cta_font</item>
  </style>

  <style name="AppTheme.BoldText">
    <item name="android:textColor">@color/textBoldColor</item>
  </style>

  <style name="AppTheme.RegularText">
    <item name="android:textColor">@color/textColor</item>
  </style>

</resources>
